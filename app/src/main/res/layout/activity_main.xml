<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="3">

        <Button
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textSize="48dp"
            android:id="@+id/btn1"
            android:tag="0"
            android:layout_toLeftOf="@+id/ApplicationMainEvent"></Button>

        <Button
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textSize="48dp"
            android:id="@+id/btn2"
            android:tag="1"
            android:layout_toLeftOf="@+id/ApplicationMainEvent"></Button>

        <Button
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textSize="48dp"
            android:tag="2"
            android:id="@+id/btn3"
            android:layout_toLeftOf="@+id/ApplicationMainEvent"></Button>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="3">

        <Button
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textSize="48dp"
            android:tag="3"
            android:id="@+id/btn4" />

        <Button
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textSize="48dp"
            android:tag="4"
            android:id="@+id/btn5"/>

        <Button
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textSize="48dp"
            android:tag="5"
            android:id="@+id/btn6"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="3">

        <Button
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textSize="48dp"
            android:tag="6"
            android:id="@+id/btn7" />

        <Button
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textSize="48dp"
            android:tag="7"
            android:id="@+id/btn8"/>

        <Button
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textSize="48dp"
            android:tag="8"
            android:id="@+id/btn9"/>

    </LinearLayout>


</LinearLayout>